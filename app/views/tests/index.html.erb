<div class="row flex-fill gx-0 py-4">
  <div class="col-lg-12 px-5 border-end border-light border-5 rounded">

<h2>SAT Tests</h2>



<ul>
  <% @tests.each do |test| %>
  <li>
    <a href ="/tests/<%= test.id %>/edit">
      Edit Test <%= test.name %>
    </a>
  </li>
  <% end %>
</ul>



<table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Test Name</th>
      </tr>
    </thead>
    <tbody>
      
     <tr>
    <%= form_with model: @test, url: tests_path, method: "post" do |form| %>
    <%= form.label :name, "Name", class: "visually-hidden" %>
      <th scope="row">1</th>
      <td><%= form.text_field :name, autocomplete: "Name", class: "form-control" %></td>
     </tr>
  </tbody>
</table>

   <%= form.submit "Create New Test", class: "btn btn-success" %>
    <% end %>
  
</div>
</div>